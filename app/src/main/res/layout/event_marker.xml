<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_vertical_margin_inner">

    <ImageView
        android:id="@+id/event_marker_sport"
        android:layout_width="@dimen/card_view_media_area"
        android:layout_height="@dimen/card_view_media_area"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/basketball" />

    <TextView
        android:id="@+id/event_marker_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginStart="@dimen/list_item_horizontal_margin"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintLeft_toRightOf="@id/event_marker_sport"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/event_marker_sport"
        tools:text="Name" />

    <TextView
        android:id="@+id/event_marker_address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginStart="@dimen/list_item_horizontal_margin"
        android:layout_marginTop="@dimen/list_item_vertical_margin"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAppearance="@style/ListItemSubtitle"
        android:textSize="@dimen/text_size_body1"
        app:layout_constraintLeft_toRightOf="@id/event_marker_sport"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_marker_name"
        tools:text="Address Ridiculous-Long-Name Street, 10, 37007 Awesome City, Country" />

    <TextView
        android:id="@+id/events_marker_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginStart="@dimen/list_item_horizontal_margin"
        android:layout_marginBottom="@dimen/list_item_vertical_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="end"
        android:textAppearance="@style/ListItemSubtitle"
        app:layout_constraintLeft_toRightOf="@id/event_marker_sport"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_marker_address"
        tools:text="10 Agosto 13:00" />


</android.support.constraint.ConstraintLayout>