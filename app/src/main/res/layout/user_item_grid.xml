<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/grid_item_container_padding">

    <ImageView
        android:id="@+id/user_item_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/grid_item_image_size"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/profile_picture_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="0dp"
        android:background="@drawable/user_item_name_background_gradient"
        android:orientation="vertical"
        android:padding="@dimen/grid_item_text_container_padding">

        <TextView
            android:id="@+id/user_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorLighter"
            tools:text="Name" />


        <TextView
            android:id="@+id/user_item_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/colorLighter"
            tools:text="City of user" />
    </LinearLayout>

</FrameLayout>