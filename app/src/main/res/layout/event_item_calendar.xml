<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/event_item_calendar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/agenda_calendar_item_margin_vertical"
        android:layout_marginEnd="@dimen/agenda_calendar_item_margin_end"
        android:layout_marginLeft="@dimen/agenda_calendar_item_margin_start"
        android:layout_marginRight="@dimen/agenda_calendar_item_margin_end"
        android:layout_marginStart="@dimen/agenda_calendar_item_margin_start"
        android:layout_marginTop="@dimen/agenda_calendar_item_margin_vertical">

        <ImageView
            android:id="@+id/event_item_calendar_sport"
            android:layout_width="@dimen/list_item_icon_size"
            android:layout_height="@dimen/list_item_icon_size"
            android:layout_marginBottom="@dimen/list_item_vertical_margin"
            android:layout_marginLeft="@dimen/list_item_vertical_margin"
            android:layout_marginStart="@dimen/list_item_vertical_margin"
            android:layout_marginTop="@dimen/list_item_vertical_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/basketball" />

        <TextView
            android:id="@+id/event_item_calendar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_horizontal_margin"
            android:layout_marginStart="@dimen/list_item_horizontal_margin"
            android:layout_marginTop="@dimen/list_item_vertical_margin"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintLeft_toRightOf="@+id/event_item_calendar_sport"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Name of the event" />


        <TextView
            android:id="@+id/event_item_calendar_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_vertical_margin"
            android:layout_marginLeft="@dimen/list_item_horizontal_margin"
            android:layout_marginStart="@dimen/list_item_horizontal_margin"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/event_item_calendar_sport"
            tools:text="Name of field, City" />

        <ImageView
            android:id="@+id/event_item_calendar_player"
            android:layout_width="@dimen/list_item_icon_two_size"
            android:layout_height="@dimen/list_item_icon_two_size"
            android:layout_marginBottom="@dimen/list_item_vertical_margin"
            android:layout_marginRight="@dimen/list_item_horizontal_margin"
            android:layout_marginEnd="@dimen/list_item_horizontal_margin"
            android:layout_marginTop="@dimen/list_item_vertical_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/logo_half" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>