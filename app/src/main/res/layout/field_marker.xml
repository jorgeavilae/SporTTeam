<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/field_marker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />

    <TextView
        android:id="@+id/field_marker_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/field_marker_name"
        tools:text="Address Street, nÂº 10, 37007" />

    <ImageView
        android:id="@+id/field_marker_sport1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:src="@drawable/basketball"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/field_marker_address"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ImageView
        android:id="@+id/field_marker_sport2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:src="@drawable/football_5"
        app:layout_constraintLeft_toRightOf="@+id/field_marker_sport1"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/field_marker_address" />

    <TextView
        android:id="@+id/field_marker_sport_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="..."
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/field_marker_sport2"
        app:layout_constraintTop_toBottomOf="@+id/field_marker_address" />

</android.support.constraint.ConstraintLayout>