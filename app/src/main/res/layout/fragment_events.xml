<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    tools:context="com.usal.jorgeav.sportapp.events.EventsFragment">

    <Button
        android:id="@+id/events_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Event"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/events_requests_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Requests"
        app:layout_constraintRight_toLeftOf="@+id/events_search_button"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/events_create_button"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/events_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:text="Search Events"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/events_create_button" />

    <com.github.tibolte.agendacalendarview.AgendaCalendarView
        android:id="@+id/agenda_calendar_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:agendaCurrentDayTextColor="@color/theme_primary"
        app:calendarColor="@color/theme_primary"
        app:calendarCurrentDayTextColor="@color/calendar_text_current_day"
        app:calendarDayTextColor="@color/theme_text_icons"
        app:calendarHeaderColor="@color/theme_primary_dark"
        app:calendarPastDayTextColor="@color/theme_light_primary"
        app:fabColor="@color/theme_accent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/events_requests_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

